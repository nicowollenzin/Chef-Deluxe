<% title "Ingredient" %>

<p>
  <strong>Name:</strong>
  <%= @ingredient.name %>
</p>
<p>
  <strong>Quantity:</strong>
  <%= @ingredient.quantity %>
</p>
<p>
  <strong>Unit:</strong>
  <%= selected_unit(@ingredient.unit_id).name %>
</p>

<p>
  <%= link_to "Edit", edit_ingredient_path(@ingredient) %> |
