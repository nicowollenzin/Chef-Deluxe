<% title "Ingredients" %>

<table>
  <tr>
    <th>Name</th>
    <th>Quantity</th>
    <th>Unit</th>
  </tr>
  <% for ingredient in @ingredients %>
    <tr>
      <td><%= ingredient.name %></td>
      <td><%= ingredient.quantity %></td>
      <td><%= selected_unit(ingredient.unit_id).name %></td>
      <td><%= link_to "Show", ingredient %></td>
      <td><%= link_to "Edit", edit_ingredient_path(ingredient) %></td>
      <td><%= link_to "Destroy", ingredient, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Ingredient", new_ingredient_path %></p>
