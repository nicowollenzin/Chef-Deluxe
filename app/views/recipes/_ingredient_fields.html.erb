<div class="panel panel-default">
  <div class="panel-body">
    <div class="form-group">
      <%= f.label :quantity %>
      <%= f.text_field :quantity, :size => 5, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :unit %>
      <%= f.select("unit_id", units_for_select, {:include_blank => true}, :class => 'form-control')%>
    </div>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :instruction %>
      <%= f.text_field :instruction, :class => 'form-control' %>
    </div>
       <%= link_to_remove_association("<i class='fa fa-minus-circle red'> remove</i>".html_safe, f, { wrapper_class: 'panel-default' }) %>
  </div>
</div>
